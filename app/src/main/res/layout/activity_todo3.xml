<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Todo3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_todo1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#D83BC8"
            android:text="To do 1"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:layout_marginBottom="30dp"
            android:paddingLeft="30dp"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="To do description"
            android:padding="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/image_plan"
                android:layout_weight="4"/>

            <TextView
                android:id="@+id/txt_degree"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Urgent"
                android:textSize="20sp"
                android:textStyle="italic" />
        </LinearLayout>


        <TextView
            android:id="@+id/create_text"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:text="To do create date"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/deadline_text"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="50dp"
            android:text="To do deadline"
            android:textSize="20sp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp">

            <RadioButton
                android:id="@+id/rad_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open" />

            <RadioButton
                android:id="@+id/rad_dev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Development" />

            <RadioButton
                android:id="@+id/rad_uploading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uploading" />

            <RadioButton
                android:id="@+id/rad_reject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reject" />

            <RadioButton
                android:id="@+id/rad_closed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Closed" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_ok"
            android:padding="5dp"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="30dp"
            android:focusable="true"
            android:text="Ok"
            android:backgroundTint="#D83BC8"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>