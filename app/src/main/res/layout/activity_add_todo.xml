<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddTodo">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#D83BC8"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:text="Add todo"
        android:layout_marginBottom="40dp"
        android:textColor="@color/white"
        android:textSize="20sp" />

<LinearLayout
    android:orientation="vertical"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/edit_name"
        style="@style/style_edit"
        android:hint="To do name" />

    <EditText
        android:id="@+id/edit_description"
        style="@style/style_edit"
        android:hint="To do description" />

    <Spinner
        android:id="@+id/spinner_todo"
        style="@style/style_edit" />


    <EditText
        android:id="@+id/edit_create_date"
        style="@style/style_edit"
        android:hint="To do create date" />

    <EditText
        android:id="@+id/edit_deadline"
        style="@style/style_edit"
        android:hint="To do deadline" />

</LinearLayout>

    <Button
        android:id="@+id/btn_save_add_to_do"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_gravity="right"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#D83BC8"
        android:text="Save"
        android:textAllCaps="false"
        android:textSize="15sp" />


</LinearLayout>